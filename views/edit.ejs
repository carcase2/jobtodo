<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>COAD</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
  </head>
  <body>
    <%- include('nav.html') %> 
    <div class="container">
      <form action="/edit?_method=PUT" method="POST">
        <input value="<%= post._id %>" type="text" name="id" style="display: none;">
        <div class="form-group mt-3 mb-3" >
          <label>글번호</label>
          <input value="<%= post._id %>" type="text" class="form-text" name="title" readonly>
      </div>
        <div class="form-group mt-3 mb-3" >
            <label>제목</label>
            <input value="<%= post.제목 %>" type="text" class="form-text" name="title">
        </div>
        <div class="form-group mt-3 mb-3">
            <label>요청일</label>
            <input value="<%= post.요청일 %>" type="date" name="req_date">
        </div>
        <div class="form-group mt-3 mb-3">
            <label>마감예정일</label>
            <input value="<%= post.마감예정일 %>" type="date" name="end_date">
        </div>

        <div class="form-group mt-3 mb-3">
          <label>완료일</label>
          <input value="<%= post.완료일 %>" type="date" name="complete_date">
      </div>
        <div class="form-group mt-3 mb-3">
            <label>요청자</label>
            <input value="<%= post.요청자 %>" type="text"  name="req_people">
        </div>

        <div class="form-group mt-3 mb-3">
            <label>소요시간</label>
            <input value="<%= post.소요시간 %>"type="number" name="cost_hour">
        </div>
        <label for="job_state" class="mt-3 mb-3">진행상태</label>
        <select id="job_state" name="job_state">
          <option value="진행중">진행중</option>
          <option value="완료">완료</option>
          <option value="미진행" selected="selected">미진행</option>
          <option value="보류">보류</option>
        </select>
        <label for="job_level">난이도</label>
        <select id="job_level" name="job_level">
         <option value="very_easy" selected="selected">*</option>
         <option value="easy">**</option>
         <option value="normal">***</option>
         <option value="hard">****</option>
         <option value="very_hard">******</option>
       </select>


        <div class="form-group mt-3 mb-3">
          <label>세부내용</label>
          <input value="<%= post.세부내용 %>"type="text" class="form-control" name="detail">
      </div>        

        <div class="form-group mt-3 mb-3">
            <label>비고</label>
            <input value="<%= post.비고 %>"type="text" class="form-control" name="remark">
        </div>


        <button type="submit" class="btn btn-outline-secondary">저장</button>
      </form>        
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
  </body>
</html>
